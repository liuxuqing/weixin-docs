<div class="container-fluid">
  <div class="row-fluid">
    <%= render :partial=>'layouts/admin_nav', :locals=>{:curr_tab=>'weixin_user'} %>

    <table class="table table-hover table-bordered">
      <thead>
      <tr>
        <th width="10%">#</th>
        <th width="20%">微信ID</th>
        <th width="20%">昵称</th>
        <th width="40%">备注</th>
        <th>状态</th>
        <th></th>
      </tr>
      </thead>

      <% @weixin_users.each.with_index do |user, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= user.weixin_id %></td>
            <td><%= user.nick %></td>
            <td><%= simple_format user.remark %></td>
            <td><%= status_desc user %></td>
            <td>
              <%= link_to "修改", edit_admin_weixin_user_path(user) %>
            </td>
          </tr>
      <% end %>
    </table>
  </div>
</div>

